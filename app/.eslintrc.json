{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-floating-promises": "warn"
  },
  "overrides": [
    {
      "files": "*_test.ts",
      "rules": {
        // 標準のdescribeやitがPromiseを返して誤爆するのを無効化
        // refs https://github.com/typescript-eslint/typescript-eslint/issues/5231
        "@typescript-eslint/no-floating-promises": {
          "ignoreVoid": true
        }
      }
    }
  ]
}
