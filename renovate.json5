{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "separateMajorMinor": true,
  "additionalBranchPrefix": "{{parentDir}}/",
  // MEMO: scheduleのフォーマット https://breejs.github.io/later/parsers.html#text
  // playground https://codepen.io/antonlydike/full/Kgygpr
  "schedule": ["on the first day of the month"],
  "lockFileMaintenance": {
    "enabled": true
    // MEMO: 普通のアップデートとlockFileMaintenanceを同時に実行する手段は見当たらない
    // "schedule": ["on the 15th day of the month"]
  },
  "includePaths": ["app/**", "infra/**"],
  "packageRules": [
    {
      "groupName": "app",
      "matchFileNames": ["app/**"],
      // いいから全部まとめろ、というおまじない
      // "matchUpdateTypes": ["major", "minor", "patch", "pin", "pinDigest", "digest", "lockFileMaintenance", "rollback", "bump", "replacement"]
    },
    {
      "groupName": "infra",
      "matchFileNames": ["infra/**"],
      // "matchUpdateTypes": ["major", "minor", "patch", "pin", "pinDigest", "digest", "lockFileMaintenance", "rollback", "bump", "replacement"],
    },
    {
      "matchFileNames": ["infra/**"],
      "ignoreDeps": [
        // gtsの依存の@typescript-eslint/typescript-estreeのバージョンの対応を見ながら上げる
        "typescript",
        // FIXME: .node-versionのとメジャーバージョンをいい感じに合わせて処理できるか？
        "@types/node"
      ]
    }
  ]
}
